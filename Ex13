using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Ex13
{

    /* Questão 13: Codifique um programa que leia um número inteiro qualquer e determine se esse
número é igual a 5, ou se é igual a 200, ou se é igual a 400, ou se está no intervalo aberto entre 500
e 1000 (aberto nos dois extremos). O programa também verifica se o número não atende a nenhum
dos critérios anteriores. */

    internal class Program
    {
        static void Main(string[] args)
        {
            int num;

            Console.WriteLine("Insira um número inteiro: ");
            num = Convert.ToInt32(Console.ReadLine());

            if (num == 5)
            {
                Console.WriteLine("O número inserido é igual a 5!");
            }
            else if (num == 200)
            {
                Console.WriteLine("O número inserido é igual a 200!");
            }
            else if (num == 400)
            {
                Console.WriteLine("O número inserido é igual a 400!");
            }
            else if (num > 500 && num < 1000)
            {
                Console.WriteLine("O número inserido está entre 500 e 1000!");
            }
            else
            {
                Console.WriteLine("O número não atende nenhum dos critérios!");
            }
            Console.ReadKey();
        }
    }
}
