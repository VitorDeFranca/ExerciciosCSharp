System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Ex18
{
    /* Questão 18: Criar um programa que imprima todos os números de 1 até 100, inclusive, e a soma de
todos eles. */

    internal class Program
    {
        static void Main(string[] args)
        {
            int soma = 0;
            
            for (int i = 1; i <= 100; i++)
            {
                soma += i;
                Console.WriteLine(i);
                Console.WriteLine($"Soma até o momento: {soma}");
            }
            Console.ReadKey();
        }
    }
}
