using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Ex19
{
    /* Questão 19: Criar um programa que imprima todos os números de 1 até 100, inclusive, e a soma do
quadrado desses números. */

    internal class Program
    {
        static void Main(string[] args)
        {
            double soma = 0;

            for (int i = 1; i <= 100; i ++)
            {
                soma += Math.Pow(i,2);
                Console.WriteLine(i);
                Console.WriteLine($"A soma dos quadrados até o momento é igual a {soma}");
            }
            Console.ReadKey();
        }
    }
}
